<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
		<title>Feature Creep Robot</title>
		<category>Web Comic</category>
		<copyright>2014 Fernando Bevilacqua. All rights reserved.</copyright>
		<language>en-us</language>
		<link>http://www.featurecreeprobot.com/</link>
		<description>Gamedev has a lot of funny situations, it's time to laugh about it.</description>
		<lastBuildDate>{{ site.time | date_to_xmlschema }}</lastBuildDate>
		<atom:link href="http://featurecreeprobot.com/rss.xml" rel="self" type="application/rss+xml" />
		
        {% for post in site.posts limit:20 %}
        {% if post.pubDate %}
            {% assign pubDate = post.pubDate | date_to_rfc822 %}
        {% else  %}
            {% assign pubDate = post.date | date_to_rfc822 %}
        {% endif %}
        <item>
			<title>Feature Creep Robot #1</title>
			<description>{{ post.content | xml_escape}}</description>
			<author>@As3GameGears (Fernando Bevilacqua)</author>
			<pubDate>{{ pubDate }}</pubDate>
			<link>http://www.featurecreeprobot.com{{ post.url }}</link>
            <guid isPermaLink="true">http://www.featurecreeprobot.com/{{ post.url }}</guid>
		</item>	
        {% endfor %}
    </channel>
</rss>